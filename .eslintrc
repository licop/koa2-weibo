{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "env": {
      "es6": true,
      "commonjs": true,
      "node": true
  },
  "rules": {
      "indent": ["error", 2],
      "quotes": [
          "error",
          "single",
          {
            "allowTemplateLiterals": true
          }
      ],
      "semi": [
          "error",
          "never"
      ]
  }
}
